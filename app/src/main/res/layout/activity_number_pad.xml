<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NumberPadActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        />

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:gravity="center_vertical"
        android:text=""
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/fs"/>

    <LinearLayout android:layout_height="90dp">

        <Button
            android:id="@+id/one_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:text="1"
            android:textSize="35sp"
            android:background="@drawable/number" />

        <Button
            android:id="@+id/two_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:text="2"
            android:textSize="35sp"
            android:background="@drawable/number" />

        <Button
            android:id="@+id/three_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:text="3"
            android:textSize="35sp"
            android:background="@drawable/number" />

        <Button
            android:id="@+id/equal_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:text="="
            android:textSize="35sp"
            android:background="@drawable/number" />
    </LinearLayout>
    <LinearLayout android:layout_height="90dp">

        <Button
            android:id="@+id/four_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:text="4"
            android:textSize="35sp"
            android:background="@drawable/number" />

        <Button
            android:id="@+id/five_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:text="5"
            android:textSize="35sp"
            android:background="@drawable/number" />

        <Button
            android:id="@+id/six_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:textSize= "35sp"
            android:layout_weight="1"
            android:text="6"
            android:background="@drawable/number" />

        <Button
            android:id="@+id/nanu_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:text="/"
            android:textSize="35sp"
            android:background="@drawable/number" />
    </LinearLayout>
    <LinearLayout android:layout_height="90dp">

        <Button
            android:id="@+id/seven_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:text="7"
            android:textSize="35sp"
            android:background="@drawable/number" />

        <Button
            android:id="@+id/eight_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:text="8"
            android:textSize="35sp"
            android:background="@drawable/number" />

        <Button
            android:id="@+id/nine_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:text="9"
            android:textSize="35sp"
            android:background="@drawable/number" />

        <Button
            android:id="@+id/gob_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:text="X"
            android:textSize="35sp"
            android:background="@drawable/number" />
    </LinearLayout>
    <LinearLayout android:layout_height="90dp">

        <Button
            android:id="@+id/zero_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:text="0"
            android:textSize="35sp"
            android:background="@drawable/number" />

        <Button
            android:id="@+id/double_zero"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:text="00"
            android:textSize="35sp"
            android:background="@drawable/number" />

        <Button
            android:id="@+id/plus_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:text="+"
            android:textSize="35sp"
            android:background="@drawable/number" />

        <Button
            android:id="@+id/del"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:text="C"
            android:textSize="35sp"
            android:background="@drawable/number" />
    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content">
        <Button
            android:id="@+id/commit"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="20dp"
            android:text="용돈 추가하기"
            android:textSize="65px"
            android:background="@drawable/get">
        </Button>
    </LinearLayout>
</TableLayout>